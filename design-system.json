{
  "name": "Farm Feed Design System",
  "version": "1.0.0",
  "description": "Design system for Farm Feed - South African grain & feed trading platform",
  "colors": {
    "primary": {
      "main": "#3D693D",
      "light": "#5A8A5A",
      "dark": "#2A4A2A",
      "tint": "#4A7A4A",
      "contrast": "#FFFFFF",
      "description": "Forest Green - Primary brand color for trust, stability, and agricultural heritage"
    },
    "secondary": {
      "main": "#DB4A39",
      "light": "#E56B5D",
      "dark": "#B83A2A",
      "tint": "#D85A4A",
      "contrast": "#FFFFFF",
      "description": "Harvest Red - Secondary brand color for energy, urgency, and South African vibrancy"
    },
    "neutral": {
      "white": "#FFFFFF",
      "charcoal": "#1F2937",
      "gray50": "#F9FAFB",
      "gray100": "#F3F4F6",
      "gray200": "#E5E7EB",
      "gray300": "#D1D5DB",
      "gray400": "#9CA3AF",
      "gray500": "#6B7280",
      "gray600": "#4B5563",
      "gray700": "#374151",
      "gray800": "#1F2937",
      "gray900": "#111827",
      "black": "#000000",
      "description": "Sophisticated neutral palette for professional hierarchy and readability"
    },
    "success": {
      "main": "#3D693D",
      "light": "#5A8A5A",
      "dark": "#2A4A2A",
      "description": "Uses Forest Green for success states"
    },
    "warning": {
      "main": "#DB4A39",
      "light": "#E56B5D",
      "dark": "#B83A2A",
      "description": "Uses Harvest Red for warning states"
    },
    "error": {
      "main": "#DB4A39",
      "light": "#E56B5D",
      "dark": "#B83A2A",
      "description": "Uses Harvest Red for error states"
    }
  },
  "gradients": {
    "primary": "linear-gradient(135deg, #3D693D 0%, #5A8A5A 100%)",
    "secondary": "linear-gradient(135deg, #DB4A39 0%, #E56B5D 100%)",
    "hero": "linear-gradient(135deg, #3D693D 0%, #DB4A39 100%)",
    "card": "linear-gradient(135deg, #F9FAFB 0%, #F3F4F6 100%)",
    "neutral": "linear-gradient(135deg, #F9FAFB 0%, #F3F4F6 100%)"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "card": "0 4px 16px rgba(0, 0, 0, 0.08)",
    "hover": "0 8px 25px rgba(0, 0, 0, 0.12)"
  },
  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem",
    "4xl": "6rem"
  },
  "typography": {
    "fontFamily": {
      "sans": ["Inter", "system-ui", "sans-serif"],
      "display": ["Poppins", "system-ui", "sans-serif"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "fontWeight": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    }
  },
  "elementStyling": {
    "cards": {
      "background": "#FFFFFF",
      "border": "#E5E7EB",
      "shadow": "0 4px 16px rgba(0,0,0,0.08)",
      "borderRadius": "1rem",
      "hover": {
        "shadow": "0 8px 25px rgba(0,0,0,0.12)",
        "transform": "translateY(-2px)"
      },
      "icons": {
        "fill": "#3D693D",
        "container": "#F3F4F6"
      }
    },
    "buttons": {
      "primary": {
        "background": "#3D693D",
        "text": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": "0.75rem 1.5rem",
        "fontWeight": "600",
        "shadow": "0 4px 6px rgba(61, 105, 61, 0.2)",
        "hover": {
          "background": "#2A4A2A",
          "shadow": "0 6px 12px rgba(61, 105, 61, 0.3)",
          "transform": "translateY(-1px)"
        },
        "active": {
          "transform": "translateY(0)"
        },
        "disabled": {
          "background": "#9CA3AF",
          "cursor": "not-allowed"
        }
      },
      "secondary": {
        "background": "#F3F4F6",
        "text": "#3D693D",
        "border": "#D1D5DB",
        "borderRadius": "0.75rem",
        "padding": "0.75rem 1.5rem",
        "fontWeight": "600",
        "hover": {
          "background": "#E5E7EB",
          "border": "#9CA3AF"
        }
      },
      "ghost": {
        "background": "transparent",
        "text": "#6B7280",
        "padding": "0.75rem 1.5rem",
        "fontWeight": "500",
        "hover": {
          "background": "#F3F4F6",
          "text": "#374151"
        }
      },
      "danger": {
        "background": "#EF4444",
        "text": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": "0.75rem 1.5rem",
        "fontWeight": "600",
        "hover": {
          "background": "#DC2626"
        }
      }
    },
    "inputs": {
      "background": "#FFFFFF",
      "border": "#D1D5DB",
      "borderRadius": "0.5rem",
      "padding": "0.75rem 1rem",
      "focus": {
        "border": "#3D693D",
        "ring": "0 0 0 3px rgba(61, 105, 61, 0.1)"
      },
      "error": {
        "border": "#EF4444",
        "ring": "0 0 0 3px rgba(239, 68, 68, 0.1)"
      }
    },
    "modals": {
      "background": "#FFFFFF",
      "borderRadius": "1rem",
      "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
      "overlay": "rgba(0, 0, 0, 0.5)"
    },
    "navigation": {
      "background": "#FFFFFF",
      "border": "#E5E7EB",
      "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
      "active": {
        "background": "#F3F4F6",
        "text": "#3D693D"
      }
    }
  },
  "componentStates": {
    "default": {
      "opacity": "1",
      "transform": "none"
    },
    "hover": {
      "opacity": "1",
      "transform": "translateY(-2px)",
      "transition": "all 0.2s ease-in-out"
    },
    "focus": {
      "opacity": "1",
      "outline": "2px solid #3D693D",
      "outlineOffset": "2px"
    },
    "disabled": {
      "opacity": "0.5",
      "cursor": "not-allowed",
      "pointerEvents": "none"
    },
    "pressed": {
      "transform": "scale(0.98)",
      "transition": "transform 0.1s ease-in-out"
    }
  },
  "doNotRules": [
    "DO NOT apply card gradient to icons or buttons",
    "DO NOT use primary button green for headings or body text",
    "DO NOT place shadows on internal card text blocks",
    "DO NOT use red accent color for success states",
    "DO NOT apply hover effects to disabled elements",
    "DO NOT use gradients on form inputs or buttons",
    "DO NOT place shadows on navigation text items"
  ],
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    }
  }
}

